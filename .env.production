# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================
# ATENÇÃO: Este arquivo serve como template.
# Copie para .env e ajuste os valores para sua produção.

# ========================================
# DJANGO CORE
# ========================================

# Gere uma nova SECRET_KEY usando: python generate_secret_key.py
SECRET_KEY=sua-chave-super-segura-gerada-para-producao-aqui

# Desabilitar debug em produção
DEBUG=False

# Domínios permitidos (separados por vírgula, sem espaços)
ALLOWED_HOSTS=seudominio.com,www.seudominio.com

# ========================================
# BANCO DE DADOS
# ========================================

# MySQL Production
DB_ENGINE=django.db.backends.mysql
DB_NAME=bolao_production
DB_USER=bolao_user_prod
DB_PASSWORD=senha-forte-do-banco-producao-aqui
DB_HOST=localhost
DB_PORT=3306

# ========================================
# EMAIL (Gmail SMTP para produção)
# ========================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu_email_producao@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_app_gmail_16_chars
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@seudominio.com

# ========================================
# APIs EXTERNAS
# ========================================

# Football-Data.org API
FOOTBALL_DATA_API_KEY=sua_chave_api_football_data_aqui

# ========================================
# SEGURANÇA (Produção)
# ========================================

# Cookies seguros (HTTPS obrigatório)
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# HSTS - HTTP Strict Transport Security
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True

# ========================================
# ARQUIVOS ESTÁTICOS E MÍDIA
# ========================================

STATIC_URL=/static/
STATIC_ROOT=/var/www/bolao/staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/bolao/media/

# ========================================
# SESSÃO E TIMEOUT
# ========================================

# Timeout de inatividade (em minutos)
INACTIVITY_TIMEOUT=30

# Idade do cookie de sessão (em segundos) - 2 horas
SESSION_COOKIE_AGE=7200

# ========================================
# CRISPY FORMS
# ========================================

CRISPY_ALLOWED_TEMPLATE_PACKS=bootstrap5
CRISPY_TEMPLATE_PACK=bootstrap5

# ========================================
# NOTAS IMPORTANTES
# ========================================

# 1. GERE NOVA SECRET_KEY: python generate_secret_key.py
# 2. USE SENHA DE APP GMAIL: https://myaccount.google.com/apppasswords
# 3. CONFIGURE BANCO DE PRODUÇÃO: MySQL com credenciais seguras
# 4. AJUSTE ALLOWED_HOSTS: Seus domínios reais
# 5. CONFIGURE HTTPS: Certificado SSL válido
# 6. TESTE TUDO: python manage.py check --deploy
# 7. BACKUP ANTES: Sempre faça backup do banco
# 8. MONITORE LOGS: Configure logging de produção
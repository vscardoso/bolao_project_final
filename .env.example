# ========================================
# CONFIGURAÇÕES DJANGO - TEMPLATE
# ========================================
# INSTRUÇÕES:
# 1. Copie este arquivo para .env
# 2. Preencha com suas credenciais reais
# 3. NUNCA commite o arquivo .env

# Ambiente (development, staging, production)
DJANGO_ENV=development

# Chave secreta Django (gere uma nova: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-secret-key-here-min-50-chars

# Debug (SEMPRE False em produção)
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# URL do site
SITE_URL=http://localhost:8000

# ========================================
# BANCO DE DADOS
# ========================================

# MySQL (Produção/Desenvolvimento)
DB_ENGINE=django.db.backends.mysql
DB_NAME=bolao_online
DB_USER=seu_usuario_mysql
DB_PASSWORD=sua_senha_segura_aqui
DB_HOST=localhost
DB_PORT=3306

# SQLite (Alternativa para desenvolvimento local)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# ========================================
# EMAIL
# ========================================

# Console (Desenvolvimento)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Real (Produção - SendGrid/SES/Gmail)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=seu_email@gmail.com
# EMAIL_HOST_PASSWORD=sua_senha_app_16_chars
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=seu_email@gmail.com

# ========================================
# APIs EXTERNAS
# ========================================

# Football-Data.org API
FOOTBALL_API_KEY=sua_chave_api_aqui

# ========================================
# SESSÃO E AUTENTICAÇÃO
# ========================================

INACTIVITY_TIMEOUT=30
SESSION_COOKIE_AGE=7200

# ========================================
# ARQUIVOS ESTÁTICOS
# ========================================

STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# ========================================
# SEGURANÇA (Produção)
# ========================================

CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_SSL_REDIRECT=False

# ========================================
# FERRAMENTAS
# ========================================

CRISPY_ALLOWED_TEMPLATE_PACKS=bootstrap5
CRISPY_TEMPLATE_PACK=bootstrap5
